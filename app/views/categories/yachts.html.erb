
<h1>Yachts</h1>
  <% @boats.each do |boat| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="..." alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= boat.name%></h5>
        <p class="card-text"><%= boat.category %> for <%= boat.capacity %></p>
        <a href=<%= boat_path(boat) %> class="btn btn-primary">Boat details </a>
      </div>
    </div>
  <% end %>
