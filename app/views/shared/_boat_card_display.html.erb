<div class="container p-3">
  <div class='flexcontainer'>
    <% @boats.each do |boat| %>
      <div class="boat-card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= boat.name%></h5>
          <% if boat.photo.attached? %>
            <%= cl_image_tag boat.photo.key, height: 160, width: 250, crop: :fill %>
          <% end %>
          <p class="card-text"><%= boat.category %> boat for <%= boat.capacity %></p>
          <a href=<%= boat_path(boat) %> class="btn btn-primary">Boat details </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
