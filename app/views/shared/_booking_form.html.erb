<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3> Book this boat</h3>
        <%= simple_form_for ([@boat, @booking]) do |f| %>
          <%= f.input :number_of_people, label: 'Number of people', placeholder: 'Enter the number of people that will be in the boat' %>
          <%= f.input :start_date, label: 'Date you will start sailing',  as: :date, html5: true %>
          <%= f.input :end_date, label: 'Date you will return the boat', as: :date, html5: true %>
          <%= f.button :submit, "Book this boat", class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
